# Loki Logging
LOKI_ENABLED=true
LOKI_PUSH_URL=https://loki.example.com/loki/api/v1/push

# Optional (only needed if Loki requires basic auth)
LOKI_USERNAME=
LOKI_PASSWORD=

# Label used for Loki streams
LOKI_JOB=phone_action_events

# Enable/disable file writes
SAVE_TO_FILE=false        # or false

# Optional: override data directory inside container
DATA_DIR=/app/data